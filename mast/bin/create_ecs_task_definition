#!/usr/bin/perl

$| = 1;
use v5.030;
use warnings;
no warnings 'uninitialized';

####
## LOGGING CONFIG START
####
use Mast::CustomLogger qw(lambda_say lambda_confess lambda_die);
####
## LOGGING CONFIG END
####

use Getopt::Long;
use JSON::PP;
use Mast::Deploy::Step;

my ($cloud_spec_json, $cloud_spec_url, $output_file);

GetOptions(
  'cloud-spec-json=s' => \$cloud_spec_json,
  'cloud-spec-url=s' => \$cloud_spec_url,
  'output-file=s' => \$output_file,
)
  or lambda_die "Error in command line arguments\n";

lambda_die "Output file parameter is missing\n" unless length $output_file > 1;

lambda_say "Cloud spec URL: $cloud_spec_url";
lambda_say "Cloud spec: $cloud_spec_json";


my $task_definition_arn = create_ecs_task_definition(
  environment => "placeholder",
  cloud_spec_json => $cloud_spec_json,
  cloud_spec_url => $cloud_spec_url,
);

open my $fh, ">", $output_file or lambda_die "Cannot open $output_file for writing: $!";
# say $fh qq|export task_definition_arn='$task_definition_arn'|;
say $fh qq|task_definition_arn=$task_definition_arn|;

close $fh;
